<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Emp App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <% for (let i = 0; i < nav.length; i++) { %>
                        <li class="nav-item">
                            <a class="nav-link active" href="<%= nav[i].link %>"><%= nav[i].name %></a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
      <h2 class="mb-4 text-center">Employee List</h2>
      <div class="row">
          <% data.forEach(employee => { %>
              <div class="col-md-4">
                  <div class="card mb-4">
                      <div class="card-body">
                          <h5 class="card-title"><%= employee.name %></h5>
                          <p class="card-text">Designation: <%= employee.designation %></p>
                          <p class="card-text">Location: <%= employee.location %></p>
                          <p class="card-text">Salary: Rs.<%= employee.salary %></p>
                          <a href="/basic/edit/<%= employee.id %>" class="btn btn-warning">Edit</a>
                          <form action="/basic/delete/<%= employee.id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        
                      </div>
                  </div>
              </div>
          <% }) %>
      </div>
  </div>
  <footer class="bg-body-tertiary text-center text-lg-start mt-5">
    <div class="text-center p-3">
        <span>Â© 2024 Emp App. All rights reserved.</span>
        <a href="#" class="text-dark ms-3">Privacy Policy</a>
        <a href="#" class="text-dark ms-3">Terms of Service</a>
    </div>
</footer>

</body>
</html>
